{% extends 'base.html.twig' %}
{% block title %}AllCourses{% endblock %}
{% block css %}
    <style>
        .form-style {
            padding: 50px;
        }
        .form-group {
            margin-bottom: 30px;
            width: 50%;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }
        ::placeholder {
            color: #FFFFFF!important;
        }
        /* Style error messages */
        .has-error .form-control {
            border-color: #a94442; /* Change border color to red */
        }
        .has-error .help-block {
            color: #a94442; /* Change text color to red */
        }

    </style>
{% endblock %}

{% block body %}



    <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>



        <link rel="stylesheet" href="{{ asset('rbt-modules1eb7.css')}}">
        <link rel='stylesheet' id='overworld-edge-modules-css' href='{{ asset('wp-content/themes/overworld/assets/css/modules.min1eb7.css?ver=6.0.3') }}' type='text/css' media='all' />
        <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}" alt="Background shape"></div>
        <center>
            <h2 style="margin: 0;padding: 50px">FEEL<span style="color: #7228e2;"> FREE</span> TO ADD <span style="color: #7228e2;"></span><br />
                YOUR <span style="color: #7228e2;">Course</span></h2>
        </center>
        <center>
            {{ form_start(form, {'attr': {'novalidate': true}}) }}

            <div class="row">
                <div style="margin-left: 21%" class="col-7">
                    <div>
                        {{ form_widget(form.titre) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.titre) }}
                        </div>

                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.description) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>


                    <div class="edgtf-eh-item-inner">
                        {{  form_label(form.picture) }}
                        {{ form_widget(form.picture) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.picture) }}
                        </div>
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{  form_label(form.videoC) }}
                        {{ form_widget(form.videoC) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.videoC) }}
                        </div>
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.prix)}}
                        <div style="background-color: transparent;color: red" class="alert-danger">

                        {{ form_errors(form.prix) }}
                    </div>
                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.niveau) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                        {{ form_errors(form.niveau) }}
                        </div>

                    </div>
                    <div class="edgtf-eh-item-inner">
                        {{ form_widget(form.idJeux) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                        {{ form_errors(form.idJeux) }}
                        </div>
                    </div>
                    <div><button href="{{path('addC')}}" type="submit" class="edgtf-btn edgtf-btn-outline edgtf-btn-huge">add course</button></div>

                </div>
            </div>
            {{ form_end(form) }}
        </center>




{% endblock %}