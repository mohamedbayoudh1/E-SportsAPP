{% extends 'base1.html.twig' %}
{% block body %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body" style="width: 200%; position : center">
                    <h4 class="card-title">Modifier le produit {{ produit.nom }}</h4>

                    <div class="form-group">
                        <label for="exampleInputUsername1">ID CATÉGORIE</label>
                        {{ form_widget(form.idCategorie, {'attr': {'class': 'form-control','style':'color:white;', 'placeholder': 'SAISIR ID DU CATÉGORIE'}, 'value': produit.idCategorie}) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">NOM</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control','style':'color:white;', 'placeholder': 'SAISIR LE NOM DU PRODUIT'}, 'value': produit.nom}) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">PRIX</label>
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control','style':'color:white;', 'placeholder': 'SAISIR LE PRIX DU PRODUIT'}, 'value': produit.prix}) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.prix) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">DESCRIPTION</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control','style':'color:white;', 'placeholder': 'SAISIR UNE DESCRIPTION POUR LE PRODUIT'}, 'value': produit.description}) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">UPLOAD IMAGE</label>
                        {{ form_widget(form.imagep, {'attr': {'class': 'form-control','style':'color:white;', 'placeholder': 'UPLOAD IMAGE'}}) }}
                        <div style="background-color: transparent;color: red" class="alert-danger">
                            {{ form_errors(form.imagep) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Modifier Produit</button>

                </div>

            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}