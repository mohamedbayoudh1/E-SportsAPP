{% endif %}

   <script>
      const submitButton = document.getElementById('review_jeux_submit');
      const starRating = document.getElementById('review_jeux_rating');

      starRating.addEventListener('click', (event) => {
         if (event.target.tagName === 'LABEL') {
            submitButton.click();
         }
      });
   </script>
