{% extends 'base.html.twig' %}

        {% block body %}

            {# templates/other_template.html.twig #}


            <body>
                <link rel='stylesheet' id='overworld-edge-modules-css' href="{{ asset('wp-content/themes/overworld/assets/css/modules.min1eb7.css?ver=6.0.3') }}" type='text/css' media='all' />

            <div class="overlay overflow-hidden pe-n"><img src="{{ asset('front_office/assets/img/bg/bg_shape.png') }}"
                                                           alt="Background shape"></div>

            <!-- ... -->

            {% for flashMessage in app.session.flashbag.get('danger') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ flashMessage }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <!-- ... -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>

            <h1 style="color: white;font-size: 90px;" class="edgtf-st-title">
                Tournments<br/></h1>
            <br><br><br><br><br><br>

            <div class="edgtf-row-grid-section-wrapper edgtf-content-aligment-left">
                <div class="edgtf-row-grid-section">
                    <div class="vc_row wpb_row vc_row-fluid">
                        <div class="wpb_column vc_column_container vc_col-sm-12">
                            <div class="vc_column-inner">
                                <div class="wpb_wrapper">

                                    <div class="edgtf-tournament-list-holder edgtf-grid-list edgtf-disable-bottom-space edgtf-three-columns edgtf-normal-space"
                                         data-number-of-columns="three" data-enable-navigation="no"
                                         data-enable-pagination="no"
                                         data-slider-margin="no">



                                        <div class="edgtf-pl-inner edgtf-outer-space ">
                                            {% for t in tournoi%}
                                                {% if t.etat == 1 %}
                                            <div class="edgtf-tournament edgtf-item-space edgtf-info-on-image">
                                                <div class="edgtf-tournament-inner">
                                                    <div class="edgtf-tournament-image">
                                                        <img width="800" height="507"
                                                             src="{{ asset('uploads/logo/'~t.image) }}"
                                                             class="attachment-full size-full" alt="a" loading="lazy"
                                                             src="{{ asset('uploads/logo/'~t.image) }},{{ asset('uploads/logo/'~t.image) }}"
                                                             sizes="(max-width: 800px) 100vw, 800px"/>
                                                        <div class="edgtf-tournament-info">
                                                            <div>
                                                                <div class="edgtf-tournament-date"><small> {{ t.datestart|date('Y-m-d H:i:s') }} </small></div>
                                                                <div><small></small>
                                                                </div>
                                                                <div><span
                                                                         ><small></small></span>
                                                                </div>
                                                            </div>
                                                            <h4 itemprop="name"
                                                                class="edgtf-tournament-name entry-title">
                                                                {{ t.nomtournoi }} </h4>
                                                            <div class="edgtf-tournament-meta">

                                                                <div class="edgtf-tournament-meta-item">
                                                                    <div class="edgtf-tournament-meta-icon ion-ios-game-controller-b"></div>
                                                                    <div class="edgtf-tournament-meta-info">
                                                                        <samll> {{t.nbjoueurteam}}v{{t.nbjoueurteam}}</samll>
                                                                    </div>
                                                                </div>
                                                                <div class="edgtf-tournament-meta-item">
                                                                    <div class="edgtf-tournament-meta-icon">
                                                                        <img width="18" height="14"
                                                                             src="{{ asset('wp-content/uploads/2019/10/platform-logo-3.png') }}"
                                                                             class="attachment-full size-full" alt="a"
                                                                             loading="lazy"/></div>
                                                                    <div class="edgtf-tournament-meta-info">
                                                                        <small>{{t.device}}  </small>
                                                                    </div>
                                                                </div>
                                                                <div class="edgtf-tournament-meta-item">
                                                                    <div class="edgtf-tournament-meta-icon ion-android-people"></div>
                                                                    <div class="edgtf-tournament-meta-info">
                                                                        <small>{{t.nbteam}}Groups</small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <a class="edgtf-tournament-overlay-link" itemprop="url" href="{{ path('consultetournoi',{id:t.id})}}"
                                                           title="Vanilla masters 2019"></a>
                                                    </div>
                                                   {% set gamer_id = app.session.get('Gamer_id')|number_format %}
                                                {% if gamer_id != t.ownertournoi.id %}
                                                    {% if app.session.has('Gamer_id') %}

                                                        <a href="{{ path('join',{id:t.id})}}"><button  style="font-size:14px; color:white;background: purple">Rejoinder </button>
                                                    </a>
                                                {% endif %}
                                                {% endif %}


                                                </div>
                                            </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </body>

            <!------------------------------------ /.sign Up ---------------------------------------------------------------->
        {% endblock %}