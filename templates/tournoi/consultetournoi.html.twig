{% extends 'base.html.twig' %}
{% block body %}
<h1>{{ tournoi.nomtournoi }}</h1>
    <div class="vc_column-inner">
        <div class="wpb_wrapper">
            <div class="edgtf-tabs edgtf-tabs-standard-reverse ui-tabs ui-corner-all ui-widget ui-widget-content">
                <ul class="edgtf-tabs-nav clearfix ui-tabs-nav ui-corner-all ui-helper-reset ui-helper-clearfix ui-widget-header" role="tablist">
                    <li role="tab" tabindex="0" class="ui-tabs-tab ui-corner-top ui-state-default ui-tab ui-tabs-active ui-state-active" aria-controls="tab-all-matches-728" aria-labelledby="ui-id-1" aria-selected="true" aria-expanded="true">
                        <a href="#tab-all-matches-728" tabindex="-1" class="ui-tabs-anchor" id="ui-id-1">All Matches</a>
                    </li>

                </ul>
                <div class="edgtf-tab-container ui-tabs-panel ui-corner-bottom ui-widget-content" id="tab-all-matches-728" aria-labelledby="ui-id-1" role="tabpanel" aria-hidden="false" style="">
                    <div class="vc_empty_space" style="height: 95px"></div>
                    <div class="edgtf-match-list-holder edgtf-grid-list edgtf-disable-bottom-space">
                        {% for classement in classements %}
                        <div class="edgtf-pl-inner edgtf-outer-space">
                            <div class="edgtf-match edgtf-appear">

                                <div class="edgtf-match-inner">

                                    <div class="edgtf-team-holder edgtf-team-1">
                                        <div class="edgtf-team-logo">
                                            <a itemprop="url" href="../../team/shuriken/index.html" title="Shuriken"><img width="10" height="10" src="{{ asset('uploads/logo/'~classement.idTeam.logo) }}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="a" loading="lazy"></a>
                                        </div>
                                        <div class="edgtf-match-bg-ribbon">
                                            <div class="edgtf-match-bg-ribbon-inner">
                                                <div class="edgtf-team-main">
                                                    <div class="edgtf-team-name-holder">
                                                        <h3 itemprop="name" class="edgtf-team-name entry-title"><a itemprop="url" href="../../team/shuriken/index.html" title="Shuriken">{{ classement.idTeam.nomteam }}</a></h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="edgtf-team-meta">

                                            <div class="edgtf-team-social-holder edgtf-team-section">
                                                <span class="edgtf-team-social-icons"><span class="edgtf-team-icon"><span class="edgtf-icon-shortcode edgtf-normal"><a class="" href="https://www.youtube.com/QodeInteractiveVideos" target="_blank"></a></span></span> <span class="edgtf-team-icon"><span class="edgtf-icon-shortcode edgtf-normal"><a class="" href="https://www.twitch.tv/" target="_blank"></a></span></span></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="edgtf-match-board">
                                        <div class="edgtf-match-score">
                                            {{ classement.score }}
                                        </div>
                                        <div class="edgtf-match-date">
                                            <a itemprop="url" href="../../match/shuriken-vs-dragonchan/index.html" title="Shuriken VS Dragonchan">17th October 2019, 19:00</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
